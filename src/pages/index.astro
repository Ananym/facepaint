---
import Layout from '../layouts/Layout.astro';
import galleryData from '../content/gallery.json';
import servicesData from '../content/services.json';

const { images } = galleryData;
const { services } = servicesData;

function formatDate(dateString: string) {
	return new Date(dateString).toLocaleDateString('en-GB', {
		day: 'numeric',
		month: 'short',
		year: 'numeric'
	});
}

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="FacePaint Magic | Professional Face Painting Services">
	<section class="hero bg-black text-white py-20 relative overflow-hidden">
		<div class="absolute inset-0 opacity-10">
			<div class="sparkle-1"></div>
			<div class="sparkle-2"></div>
			<div class="sparkle-3"></div>
		</div>
		<div class="container mx-auto px-4 text-center relative">
			<h1 class="text-3xl md:text-5xl font-bold mb-6">Bringing Magic to Your Events</h1>
			<p class="text-lg mb-8">Professional Face Painting Services in London and Surrey</p>
			<a href="#contact" class="bg-white text-black px-8 py-3 rounded-full font-bold hover:bg-gray-200 transition-colors transform hover:scale-105 duration-200">Book Now</a>
		</div>
	</section>

	<section id="services" class="py-16">
		<div class="container mx-auto px-4">
			<h2 class="text-2xl md:text-4xl font-bold text-center mb-12">Our Services</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{services.map((service) => (
					<div class="text-center p-6 border-2 border-black rounded-lg hover:transform hover:scale-105 transition-transform duration-200 bg-white hover:shadow-lg">
						<div class="text-4xl mb-4">{service.icon}</div>
						<h3 class="text-lg font-bold mb-4">{service.title}</h3>
						<p class="text-base mb-6">{service.description}</p>
						<ul class="text-sm space-y-2 text-left">
							{service.features.map((feature) => (
								<li class="flex items-center">
									<span class="mr-2">✨</span>
									{feature}
								</li>
							))}
						</ul>
					</div>
				))}
			</div>
		</div>
	</section>

	<section id="gallery" class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<h2 class="text-2xl md:text-4xl font-bold text-center mb-12">Gallery</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				{images.map((image) => (
					<div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1">
						<div class="aspect-square bg-gray-200 relative overflow-hidden">
							{image.placeholder ? (
								<div class="absolute inset-0 flex items-center justify-center">
									<span class="text-gray-400">Image coming soon</span>
								</div>
							) : (
								<img 
									src={`/images/gallery/${image.filename}`} 
									alt={image.alt}
									class="w-full h-full object-cover"
								/>
							)}
						</div>
						<div class="p-4 space-y-2">
							<h3 class="text-lg font-bold">{image.title}</h3>
							<p class="text-sm text-gray-600">{image.event}</p>
							<p class="text-xs text-gray-500">{formatDate(image.date)}</p>
						</div>
					</div>
				))}
			</div>
		</div>
	</section>

	<section id="pricing" class="py-16">
		<div class="container mx-auto px-4">
			<h2 class="text-2xl md:text-4xl font-bold text-center mb-12">Pricing</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="border-2 border-black rounded-xl p-6 bg-white hover:shadow-lg transition-shadow duration-300">
					<h3 class="text-lg font-bold mb-4">Basic Package</h3>
					<p class="text-2xl font-bold mb-4">£120</p>
					<ul class="space-y-2 mb-6 text-base">
						<li>✨ 2 Hours of Face Painting</li>
						<li>✨ Up to 20 Children</li>
						<li>✨ Basic Design Options</li>
						<li>✨ Travel within 10 miles</li>
					</ul>
				</div>
				<div class="border-2 border-black rounded-xl p-6 transform scale-105 bg-white shadow-lg hover:shadow-xl transition-shadow duration-300 relative">
					<div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-black text-white px-4 py-1 rounded-full text-sm">
						Most Popular
					</div>
					<h3 class="text-lg font-bold mb-4">Popular Package</h3>
					<p class="text-2xl font-bold mb-4">£180</p>
					<ul class="space-y-2 mb-6 text-base">
						<li>✨ 3 Hours of Face Painting</li>
						<li>✨ Up to 35 Children</li>
						<li>✨ Premium Design Options</li>
						<li>✨ Travel within 20 miles</li>
					</ul>
				</div>
				<div class="border-2 border-black rounded-xl p-6 bg-white hover:shadow-lg transition-shadow duration-300">
					<h3 class="text-lg font-bold mb-4">Event Package</h3>
					<p class="text-2xl font-bold mb-4">£300</p>
					<ul class="space-y-2 mb-6 text-base">
						<li>✨ 5 Hours of Face Painting</li>
						<li>✨ Unlimited Participants</li>
						<li>✨ All Design Options</li>
						<li>✨ Travel within 30 miles</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<section id="contact" class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<h2 class="text-2xl md:text-4xl font-bold text-center mb-12">Contact Us</h2>
			<div class="max-w-lg mx-auto">
				<form class="space-y-6">
					<div>
						<label for="name" class="block mb-2 font-bold text-base">Name</label>
						<input type="text" id="name" name="name" class="w-full p-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:outline-none transition-shadow duration-200" required>
					</div>
					<div>
						<label for="email" class="block mb-2 font-bold text-base">Email</label>
						<input type="email" id="email" name="email" class="w-full p-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:outline-none transition-shadow duration-200" required>
					</div>
					<div>
						<label for="phone" class="block mb-2 font-bold text-base">Phone</label>
						<input type="tel" id="phone" name="phone" class="w-full p-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:outline-none transition-shadow duration-200" required>
					</div>
					<div>
						<label for="message" class="block mb-2 font-bold text-base">Message</label>
						<textarea id="message" name="message" rows="4" class="w-full p-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:outline-none transition-shadow duration-200" required></textarea>
					</div>
					<button type="submit" class="w-full bg-black text-white py-3 rounded-full font-bold hover:bg-gray-800 transition-all duration-200 transform hover:scale-105">Send Message</button>
				</form>
			</div>
		</div>
	</section>
</Layout>

<style>
	.sparkle-1,
	.sparkle-2,
	.sparkle-3 {
		position: absolute;
		width: 100px;
		height: 100px;
		background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
		border-radius: 50%;
		animation: float 6s infinite;
	}

	.sparkle-1 { top: 20%; left: 20%; animation-delay: 0s; }
	.sparkle-2 { top: 60%; left: 50%; animation-delay: 2s; }
	.sparkle-3 { top: 30%; left: 80%; animation-delay: 4s; }

	@keyframes float {
		0%, 100% { transform: translate(0, 0) scale(1); }
		50% { transform: translate(20px, -20px) scale(1.1); }
	}
</style>
